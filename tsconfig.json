{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
     "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@shared/*": [
        "./shared/*"
      ]
    }
  },
  "include": [
    "src",
    "shared",
    "config",
    "modern.config.ts",
    "server"
  ],
  "exclude": [
    "**/node_modules"
  ]
}
